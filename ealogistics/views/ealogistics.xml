<odoo>
	<!--INHERIT PROJECT.TASK FORM VIEW-->
	<record model="ir.ui.view" id="task_view">
        <field name="name">ealogistics.task</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
		<field name="arch" type="xml">
		
		    <div class="oe_title" position="replace">
				<xpath expr="//field[@name='name']" position="attributes"> 
					<attribute name="invisible">True</attribute>
				</xpath>
			<group>
				<label for="owner_code" string="Container No." />
				<div class="container_format">
					 <field name="owner_code" style="width: 10%" required="1" options="{'no_create_edit': True}" />
					 <field name="category_id" style="width: 10%" required="1" />
					 <field name="serial_no" style="width: 20%" required="1" />
				</div>
				<field name="container_type" style="width: 40%"/>
			</group>
			
				<h1 class="o_row">
					<field name="priority" widget="priority"/>
					<field name="name" style="border:1px solid silver;padding:15px;"/>
				</h1>
            </div>
		
			<xpath expr="//field[@name='user_id']" position="after">
				<field name='source_location'/>
				<field name='delivery_truck'/>
				<field name='returned_truck'/>
			</xpath>
			
			<xpath expr="//field[@name='date_deadline']" position="after">
				<field name='truck_amount'/>
				<field name='destination_location'/>
				<field name='delivery_date'/>
				<field name='returned_date'/>
			</xpath>
			
			<!--<xpath expr="//field[@name='truck_amount']" position="after">

			</xpath>-->
			
		</field>
	</record>
	
	
	<!--INHERIT PROJECT.PROJECT FORM VIEW-->
	<record model="ir.ui.view" id="ealogistic_project_form_view">
		<field name="name">project.form</field>
		<field name="model">project.project</field>
		<field name="inherit_id" ref="project.edit_project"/>
		<field name="arch" type="xml">
		
			<xpath expr="//sheet" position="before">
				<header>
					<button string="Confirm" type="object" name="confirm" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['to_invoice','invoiced'])]}"/>
					<button string="Create Invoice" type="object" name="create_invoice" class="oe_highlight" attrs="{'invisible': [('invoice_id', '!=', False)]}"/>
					
					<!--This will create the statusbar, thanks to the widget. -->
              	    <field name="state" widget="statusbar" statusbar_visible="open,to_invoice,invoiced"/>
				</header>
			</xpath>
				
			<div class="oe_button_box" position="inside">
				
				<button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-money" attrs="{'invisible': [('invoice_id', '=', False)]}">
					
				</button>
			</div>

            <div class="oe_title" position="replace">
				<h2>
					<field name="project_code" />
				</h2>
				<h1>
					<field name="name" placeholder="Project Name" style="width:30%;"/>
				</h1>
				<group>
					<group>
						<field name="label_tasks" />
						<field name="invoice_id" invisible="1" />
					</group>
					<group>
						<field name="container_20_feet"/>
						<field name="container_40_feet"/>
						<field name="task_count" />
					</group>
				</group>
				
			</div>
            <field name='partner_id' position="attributes">
				<attribute name="required">True</attribute>
            </field>
			
            <field name='task_count' position="attributes">
				<attribute name="invisible">True</attribute>
            </field>
			

		</field>
	</record>
	
</odoo>