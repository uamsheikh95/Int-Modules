<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="backorder_by_item_form" model="ir.ui.view">
			<field name="name">mgs_inv_branch.backorder_by_item.form</field>
			<field name="model">mgs_inv_branch.backorder_by_item</field>
			<field name="arch" type="xml">
				 <form>
					<sheet>
						<group>
							<group>
								<field name="order_id" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" required="1" />
								<field name="partner_id" readonly="0" string="Partner" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
								<field name='company_branch_id' groups="odoo_multi_branch.group_multi_branches" widget="selection" options="{'no_create': True}"/>
							</group>
							<group>
								<field name="product_id" string="Product" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
								<field name="stock_location_ids"  string="Location" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" widget="many2many_tags"/>
								<field name="company_id" groups="base.group_multi_company" />
							</group>
						</group>
					</sheet>

				<footer>
					<button name="confirm" string="View" type="object" class="oe_highlight"/>
					<button string="Cancel" special="cancel"/>
				</footer>

				 </form>
			</field>
		</record>



		<record id="action_backorder_by_item_form" model="ir.actions.act_window">
			<field name="name">Generate Backorder by Item Report</field>
			<field name="res_model">mgs_inv_branch.backorder_by_item</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="backorder_by_item_form"/>
			<field name="target">new</field>
		</record>


		<menuitem id="menu_backorder_by_item" name="Backorder by Item" parent="mgs_moves_root" action="action_backorder_by_item_form" sequence="5" />

</odoo>
