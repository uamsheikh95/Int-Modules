<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="reserved_for_partner_form" model="ir.ui.view">
			<field name="name">mgs_inv_branch.reserved_for_partner.form</field>
			<field name="model">mgs_inv_branch.reserved_for_partner</field>
			<field name="arch" type="xml">
				 <form>
					<sheet>
						<group>
							<group>
								<field name="date_from" string = "From" required="1" />
								<field name="product_id" string="Product" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
								<field name="warehouse_id"  string="Warehouse" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
								<field name="stock_location_ids"  string="Location" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" widget="many2many_tags"/>
								<field name="partner_id" string="Partner" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
								<field name="include_reserved" />
								<field name="show_reserved_only" attrs="{'invisible':[('include_reserved', '=', False)]}" />
							</group>
							<group>
								<field name="date_to" string="To" required="1" />
								<field name="view" widget="radio"/>
								<field name='company_branch_id' groups="odoo_multi_branch.group_multi_branches" widget="selection" options="{'no_create': True}"/>
								<field name="company_id" groups="base.group_multi_company" />
								<field name="order_id" />
							</group>
						</group>
					</sheet>

				<footer>
					<button name="confirm" string="View" type="object" class="oe_highlight"/>
					<button string="Cancel" special="cancel"/>
				</footer>

				 </form>
			</field>
		</record>



		<record id="action_reserved_for_partner_form" model="ir.actions.act_window">
			<field name="name">Generate Reserved for Partner Report</field>
			<field name="res_model">mgs_inv_branch.reserved_for_partner</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="reserved_for_partner_form"/>
			<field name="target">new</field>
		</record>


		<menuitem id="menu_reserved_for_partner" name="Reserved Items" parent="mgs_moves_root" action="action_reserved_for_partner_form" sequence="1" />

</odoo>
