<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="customer_statement_form" model="ir.ui.view">
			<field name="name">mgs_billing.customer_statement.form</field>
			<field name="model">mgs_billing.customer_statement</field>
			<field name="arch" type="xml">
			   <form>
					<sheet>
						<group>
							<group>
								<field name="date_from" string = "From Date" />
								<field name="partner_id" string="Tenant" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
                <field name="company_id" groups="base.group_multi_company" />
							</group>


							<group>
								<field name="date_to" string="To Date" />
                <field name="property_id" string="Property" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
								<field name="perv_properties" string="Include Previous Properties" invisible="0"/>
							</group>
						</group>
					</sheet>

				<footer>
					<button name="confirm" string="View" type="object" class="oe_highlight"/>
					<button string="Cancel" special="cancel"/>
				</footer>

			   </form>
			</field>
		</record>



		<record id="action_customer_statement_form" model="ir.actions.act_window">
			<field name="name">Customer Statement</field>
			<field name="res_model">mgs_billing.customer_statement</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="customer_statement_form"/>
			<field name="target">new</field>
		</record>


		<menuitem id="menu_customer_statement" name="Customer Statement" parent="reporting_menu" action="action_customer_statement_form" sequence="1" />

</odoo>
