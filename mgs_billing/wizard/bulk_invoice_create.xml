            <field name="model">mgs_billing.meter_reading_bulk_inv</field>
            <field name="arch" type="xml">
                <form string="Generate Bulk Invoices">
                    <group>
                      <group>
                        <field name="validate_invoices" string="Post Invoice" />
                      </group>

                      <group>
                      </group>
                    </group>
