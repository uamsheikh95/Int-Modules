    <record model="ir.ui.view" id="teacher_form">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Classes">
                    <field name="class_ids">
                        <tree create="false" delete="false" edit="false">
                            <field name="name" string="Code" />
                            <field name="course_id" string="Course" />
                            <field name="date_start" string="From" />
                            <field name="date_end" string="To" />
                            <field name="time_in" string="Time In" />
                            <field name="time_out" string="Time Out" />
                            <field name="state" string="Class State" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

