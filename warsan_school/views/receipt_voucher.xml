<odoo>
<data>
	<record id="paperformat_short" model="report.paperformat">
		<field name="name">Short (Half-A4)</field>
		<field name="default" eval="False" />
		<field name="format">A5</field>
		<field name="orientation">Portrait</field>
		<field name="margin_top">7</field>
		<field name="margin_bottom">7</field>
		<field name="margin_left">7</field>
		<field name="margin_right">7</field>
		<field name="header_line" eval="False" />
		<field name="header_spacing">0</field>
		<field name="dpi">90</field>
	</record>



    <report
        id="action_receipt_voucher"
        name="warsan_school.receipt_voucher"
        file="warsan_school.receipt_voucher"
        model="warsan_school.registration"
        string="Receipt Voucher"
        report_type="qweb-html"
		paperformat="warsan_school.paperformat_short"
        />

    <template id="receipt_voucher">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page" >
                        <div class="row">


                        	<div class="col-md-12">
                        		<div class="">




									<table class="table table-bordered" style="margin-top:100px">
										<tbody>
											<tr>
												<td>
													<h3 style="text-align:center">Warsan Bountique School</h3>
												</td>
											</tr>

											<tr>
												<td>
													<h4 style="text-align:center">Receipt Voucher</h4>
												</td>
											</tr>
										</tbody>
									</table>

									<table class="table table-bordered">
										<tbody>
											<tr>
												<td><strong>Stud.Name</strong></td>
												<td><span t-field="doc.student_id"/></td>

												<td><strong>Date</strong></td>
												<td><span t-field="doc.reg_date"/></td>
											</tr>

											<tr>
												<td><strong>Course</strong></td>
												<td><span t-field="doc.class_id.course_id.name"/></td>

												<td><strong>Doc No.</strong></td>
												<td><span t-field="doc.name"/></td>
											</tr>

											<tr>
												<td><strong>Period</strong></td>
												<td><span t-field="doc.class_id.date_start"/> - <span t-field="doc.class_id.date_end"/></td>

												<td><strong>Teacher</strong></td>
												<td><span t-field="doc.class_id.teacher_id"/></td>
											</tr>

											<tr>
												<td><strong>Time In</strong></td>
												<td><span t-field="doc.class_id.time_in"/></td>

												<td><strong>Time Out</strong></td>
												<td><span t-field="doc.class_id.time_out"/></td>
											</tr>

											<tr>
												<td><strong>Amount</strong></td>
												<td><span t-field="doc.currency_id.symbol" /><span t-field="doc.ammount_fee"/></td>

												<td><strong>Status</strong></td>
												<td><span t-field="doc.state"/></td>
											</tr>
										</tbody>
									</table>
                        		</div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>

        </t>
    </template>

</data>
</odoo>


