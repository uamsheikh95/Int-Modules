<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <report
     id="action_report_product_transfer"
     name="mgs_inv.product_transfer_report"
     model="mgs_inv.product_transfer_report"
     string="Product Moves History"
     report_type="qweb-html"
     paperformat="paperformat_custom"
 />
 <!--  paperformat="paperformat_custom" -->


    <template id="product_transfer_report">
        <t t-call="report.html_container">
             <t t-call="report.internal_layout">
                <div class="page">
                    <div class="container" style="font-size:12px;font-family:Arial;margin-top:1px;">
                      <div class="text-center" style="margin-top:4px;font-size: 18px; font-weight: bold;">Product Moves Report</div>

                      <div id="informations" class="row mt2 mb2">

        								<div class="col-auto mw-100 mb-2" t-if="date_from" style="width: 20%; float: left;">
        									<strong>Date from:</strong>
        									<p class="m-0" t-esc="date_from"/>
        								</div>
        								<div class="col-auto mw-100 mb-2" t-if="date_to" style="width: 20%; float: left;">
        									<strong>Date to:</strong>
        									<p class="m-0" t-esc="date_to"/>
        								</div>

                        <div class="col-auto mw-100 mb-2" style="width: 20%; float: left;">
        									<strong>Source:</strong>
        									<p class="m-0" t-esc="location_name"/>
        								</div>

                        <div class="col-auto mw-100 mb-2" style="width: 20%; float: left;">
        									<strong>Destination:</strong>
        									<p class="m-0" t-esc="location_dest_name"/>
        								</div>
        							</div>

                      <div class="row">
                        <table style="width:100%;">
                          <thead style="border-bottom:1px solid #dddddd;border-top:1px solid #dddddd">
                            <tr style="background-color: #F2F4F4;">
                              <th nowrap="nowrap">Date</th>
                              <th nowrap="nowrap" style="display:none">Type</th>
                              <th nowrap="nowrap">From</th>
                              <th nowrap="nowrap">To</th>
                              <th nowrap="nowrap">Ref</th>
                              <th nowrap="nowrap">Source</th>
                              <th nowrap="nowrap">Partner</th>
                              <th style="text-align:right" nowrap="nowrap">Qty</th>
                              <th nowrap="nowrap" style="text-align:center">UOM</th>
                              <!-- <th>Total</th> -->
                            </tr>
                          </thead>

                          <tbody>

                            <t t-set="total_qty" t-value="0"/>
                            <tr style="border-bottom:1px solid #dddddd;border-top:1px solid #dddddd">
                              <td colspan="9"><p style="font-weight:bold;margin-bottom:0;font-size: 16px;color:blue"><span t-esc="product_name"/></p></td>
                            </tr> <!--Product Name-->

                            <tr style="border-bottom:1px solid #dddddd;border-top:1px solid #dddddd" t-foreach="lines(product_id, date_from, date_to, location_id, location_dest_id)" t-as="line">
                                <td nowrap="nowrap">
                                  <span t-esc="line['date']"/>
                                </td>
                                <td style="display:none"><span t-esc="line['usage']"/> > <span t-esc="line['usaged']"/></td>
                                <td><span t-esc="line['location_id']"/></td>
                                <td><span t-esc="line['location_dest_id']"/></td>
                                <td><span t-esc="line['picking_id']"/></td>
                                <td><span t-esc="line['origin']"/></td>
                                <td><span t-esc="line['partner_id']"/></td>




                                <td style="text-align:right">
                                  <span t-esc="line['product_uom_qty']" />
                                  <t t-set="total_qty" t-value="total_qty + line['product_uom_qty']"/>
                                </td>

                                <td style="text-align:center">
                                  <span t-esc="line['product_uom']" />
                                </td>

                              </tr>

                              <tr style="border-bottom:1px solid #dddddd;border-top:1px solid #dddddd;background-color: #F2F4F4;">
                                <td><p style="font-weight:bold;margin-bottom:0;">Total <span t-esc="product_name" /> Qty  : </p></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td style="text-align:right;font-weight:bold;text-align:right">
                                  <span t-esc="total_qty" />
                                </td>
                                <td></td>
                              </tr>

                          </tbody>
                        </table>
                      </div> <!--tow-->


                    </div> <!--container-->
                </div> <!--page-->
              </t> <!--report.external_layout-->
        </t> <!--report.html_container-->
    </template>
</odoo>
