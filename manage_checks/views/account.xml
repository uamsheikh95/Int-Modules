<odoo>
  <record id="payment_from_inherit" model="ir.ui.view">
    <field name="name">account.payment.form.inherit</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <xpath expr="//label[@for='amount']" position="before">
        <field name="check_no" attrs="{'invisible': [('payment_method_code', '!=', 'check_printing')], 'readonly': [('state', '!=', 'draft')]}"/>
      </xpath>

    </field>
  </record>

  <record id="account_register_payments_from_inherit" model="ir.ui.view">
    <field name="name">account.register.payments.inherit</field>
    <field name="model">account.register.payments</field>
    <field name="inherit_id" ref="account.view_account_payment_from_invoices"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='payment_method_id']" position="before">
        <field name="check_no" style="color:red" attrs="{'invisible': [('payment_method_code', '!=', 'check_printing')]}" />

      </xpath>

    </field>
  </record>


  <record id="account_payments_from_check" model="ir.ui.view">
      <field name="name">account.payment.check</field>
      <field name="model">account.payment</field>
      <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='payment_method_id']" position="before">
        <field name="check_no" style="color:red" attrs="{'invisible': [('payment_method_code', '!=', 'check_printing')]}" />
      </xpath>
    </field>
  </record>
</odoo>
