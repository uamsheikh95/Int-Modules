<odoo>
    <data>
        <record id="group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="base.module_category_payment_request"/>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_payment_request"/>
            <field name="implied_ids" eval="[(4, ref('group_user'))]"/>
        </record>
        <record id="group_cfo" model="res.groups">
            <field name="name">CFO</field>
            <field name="category_id" ref="base.module_category_payment_request"/>
            <field name="implied_ids" eval="[(4, ref('group_manager'))]"/>
        </record>




        <record id="only_responsible_can_modify_payment_request" model="ir.rule">
            <field name="name">Only Responsible can modify/read/unlink/create Payment Request</field>
            <field name="model_id" ref="model_dalkom_payment_request_payment_request"/>
            <field name="groups" eval="[(4, ref('group_user'))]"/>
            <field name="domain_force">
                  ['|',('company_id','=',False),('company_id','child_of',[user.company_id.id]),('create_uid','=',user.id)]
            </field>
        </record>
        <record id="managers_can_only_see_their_content" model="ir.rule">
            <field name="name">Manager will see his assined to approve requests</field>
            <field name="model_id" ref="model_dalkom_payment_request_payment_request"/>
            <field name="groups" eval="[(4, ref('group_manager'))]"/>
            <field name="domain_force">
              [('approve_by','=',user.id),('state','not in',['to_submit'])]

            </field>
        </record>
        <record id="cfo_can_only_see_their_content" model="ir.rule">
            <field name="name">CFO will be able to see all payment requests and can approve</field>
            <field name="model_id" ref="model_dalkom_payment_request_payment_request"/>
            <field name="groups" eval="[(4, ref('group_cfo'))]"/>
            <field name="domain_force">
              [(1,'=',1)]
            </field>
        </record>

    </data>
</odoo>
