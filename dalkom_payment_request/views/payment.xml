
<odoo>
    <data>
        <record model="ir.ui.view" id="payment_form_view">
            <field name="name">account.payment</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <xpath expr="field[@name='state']" position="replace">
                        <field name="state"   widget="statusbar" statusbar_visible="draft,submitted,approved,posted,reconciled,cancelled"/>
                    </xpath>
                    <xpath expr="field[@name='post']" position="replace">
                        <button name="post" class="oe_highlight" string="Confirm" type="object" attrs="{
                        'invisible': [('state', 'not in', ['approved'])]}"/>
                    </xpath>
                    <button name="submit_to_manager" class="oe_highlight" string="Submit to Approve" type="object" attrs="{
                    'invisible': [('state', 'not in', ['draft'])]}"/>
                    <button name="approve" class="oe_highlight" string="Approve" type="object" attrs="{
                    'invisible': [('state', 'not in', ['submitted'])]}" groups="account.group_extended"/>
				</header>
				
				<field name="journal_id" position="after">
					<field name="cash_register_id" options="{'no_create': True}" required="1"/>
				</field>
				
				<xpath expr="sheet" position="inside">
					<button string="Add Register" type="object" name="add_register" class="oe_highlight"/>
				</xpath>

            </field>
        </record>
    </data>
</odoo>
