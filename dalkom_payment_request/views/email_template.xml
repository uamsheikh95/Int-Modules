<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment_request_email_template" model="mail.template">
          <field name="name">Payment Request e-mail template</field>
          <field name="subject">Payment Request from ${object.create_uid.name}</field>
          <field name="email_to">${object.approve_by.login}</field>
          <field name="model_id" ref="model_dalkom_payment_request_payment_request"/>
          <field name="auto_delete" eval="True"/>
	  <field name="body_html">
            <![CDATA[
	      <p>Dear ${(object.approve_by.name)},<br/><br/>
	         A payment Request has been submitted by ${(object.create_uid.name)}!<br/></p>
              Regards,<br/>
              Odoo Payment Request machine
	    ]]>
	  </field>
       </record>
    </data>
</odoo>
