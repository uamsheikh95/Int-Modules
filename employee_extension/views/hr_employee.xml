<odoo>
<record id="hr_employee_form_inherit" model="ir.ui.view">
      <field name="name">hr.employee.form.inherit</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form" />
      <field name="type">form</field>
      <field name="arch" type="xml">
             <!-- CUSTOMIZATIONS -->
             <xpath expr="//field[@name='work_location']" position="replace">
                  <field name="work_location_id" /> <!-- options="{'no_create': True, 'no_create_edit':False, 'no_quick_create':True}"-->
              </xpath>

              <xpath expr="//field[@name='km_home_work']" position="attributes">
                <attribute name="string" >IBAN/Account</attribute>
              </xpath>

              <xpath expr="//field[@name='km_home_work']" position="replace">
                   <field name="account_no" /> <!-- options="{'no_create': True, 'no_create_edit':False, 'no_quick_create':True}"-->
               </xpath>

      </field>
  </record>
</odoo>
