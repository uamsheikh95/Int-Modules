<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="ledger_by_item_wizard_form" model="ir.ui.view">
			<field name="name">mgs_account.ledger_by_item_wizard.form</field>
			<field name="model">mgs_account.ledger_by_item_wizard</field>
			<field name="arch" type="xml">
			   <form>
             <group>
               <group>
                 <field name="date_from" string = "From" required="1" />
                 <field name="partner_id" string = "Partner" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
                 <field name="group_by" required="1" />
               </group>

               <group>
                 <field name="date_to" string="To" required="1" />
                 <field name="account_id" string = "Account" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
               </group>
             </group>

             <group>
               <field name="journal_ids" widget="many2many_tags" string="Journal" required="1" />
             </group>

             <footer>
               <button name="check_report" string="View" type="object" class="oe_highlight"/>
               <button string="Cancel" special="cancel"/>
             </footer>
			   </form>
			</field>
		</record>

    <record id="action_ledger_by_item_wizard_form" model="ir.actions.act_window">
			<field name="name">Print Moves</field>
			<field name="res_model">mgs_account.ledger_by_item_wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="ledger_by_item_wizard_form"/>
			<field name="target">new</field>
		</record>

    <menuitem id="menu_mgs_account_report" name="MGS Report" parent="account.menu_finance_reports" />
		<menuitem id="menu_ledger_by_item" name="Ledger by Item" parent="menu_mgs_account_report" action="action_ledger_by_item_wizard_form" />
</odoo>
