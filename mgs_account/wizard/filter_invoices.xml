<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="filter_invoices_wizard_form" model="ir.ui.view">
			<field name="name">mgs_accounts.filter_invoices_wizard.form</field>
			<field name="model">mgs_accounts.filter_invoices_wizard</field>
			<field name="arch" type="xml">
			   <form>

					<header>
						<button name="action_send_mail" type="object" string="Send Mail"/>
					</header>

					<sheet>
						<group>
							<group>
								<field name="date_from" string = "From" required="1" />
								<field name="invoice_type" />
								<field name="product_id" string="Product" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
								<field name="partner_id" string = "Partner" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />

							</group>


							<group>
								<field name="date_to" string="To" required="1" />
								<field name="state"  />
								<field name="categ_id" string = "Category" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
								<field name="team_id" string="Sales Team" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
								<field name="user_id" string = "User" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />

							</group>
						</group>
					</sheet>

				<footer>
					<button name="confirm" string="Confirm" type="object" class="oe_highlight"/>
					<button string="Cancel" special="cancel"/>
				</footer>

			   </form>
			</field>
		</record>



		<record id="action_filter_invoices_wizard_form" model="ir.actions.act_window">
			<field name="name">Invoice Reports</field>
			<field name="res_model">mgs_accounts.filter_invoices_wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="filter_invoices_wizard_form"/>
			<field name="target">new</field>
		</record>


		<menuitem id="menu_mgs_account" name="Custom Reports" parent="account.menu_finance_reports" />
		<menuitem id="menu_filtered_invoices" name="Filter Invoices" parent="menu_mgs_account" action="action_filter_invoices_wizard_form" />

</odoo>
