<odoo>
	<data>
		<record model="ir.ui.view" id="shipment_form">
				<field name="name">sahan_logistics.shipment.form</field>
				<field name="model">sahan_logistics.shipment</field>
				<field name="arch" type="xml">
					<form string="Trip">
						<header>
								<button string="Confirm" type="object" name="confirm" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['confirmed'])]}" />

								<field name="state" widget="statusbar"/>
						</header>
							<sheet>

									<div class="oe_title" style="float:left;width:50%;margin-top:20px">
											<h1>
													<field name="name" string="Job" attrs="{'invisible': [('state', '=', 'draft')]}"/>
											</h1>
									</div>

									<div class="oe_button_box" name="button_box">

										<button name="invoice_create" type="object" class="oe_stat_button" icon="fa-dollar">
													<field name="invoice_count" widget="statinfo" string="Invoices" />

													<field name='invoice_ids' invisible="1"/>
										</button>

										<button type="object"  name="bill_create"
												class="oe_stat_button"
												icon="fa-pencil-square-o">
												<field name="bill_count" widget="statinfo" string="Bills" />

												<field name='bill_ids' invisible="1" />
										</button>
									</div>

									<group>
											<group>
													<field name="container_no"
														attrs="{'readonly': [('state', 'in', ('confirmed'))]}"/>

													<field name="shipment_type"
															attrs="{'readonly': [('state', 'in', ('confirmed'))]}"/>

													<field name="seal_no"
														attrs="{'readonly': [('state', 'in', ('confirmed'))]}"/>
													<field name="port_of_loading_id"
														attrs="{'readonly': [('state', 'in', ('confirmed'))]}"/>

											</group>
											<group>
													<field name="date"
														attrs="{'readonly': [('state', 'in', ('confirmed'))]}"/>
													<field name="partner_id"
														attrs="{'readonly': [('state', 'in', ('confirmed'))]}"/>
													<field name="port_of_delivery_id"
														attrs="{'readonly': [('state', 'in', ('confirmed'))]}"/>

													<field name="total_invoices" style="margin-top:1px solid #444"/>
													<field name="total_bills"/>
													<field name="total"/>

											</group>
									</group>

									<field name="trip_line_ids"  attrs="{'readonly': [('state', 'in', ('confirmed'))]}">
										<tree editable="bottom">
											<field name="packing_item_id" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
											<field name="qty"/>
											<field name="partner_id"/>
											<field name="partner_mobile"/>
											<field name="volume_weight"/>
											<field name="price_per_cbm"/>
											<field name="total_cbm"/>
											<field name="total_per_cbm"/>
<!--											<field name="remaining_qty"/>-->
<!--											<field name="departed_qty"/>-->
											<field name="remarks"/>
										</tree>
									</field>
									<div class="oe_subtotal_footer_separator oe_inline">
											<label for="chargeable_weight"/>
									</div>
									<field name="chargeable_weight" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>

								</sheet>
								<div class="oe_chatter">
									<field name="message_follower_ids" widget="mail_followers"/>
									<field name="activity_ids" widget="mail_activity"/>
									<field name="message_ids" widget="mail_thread"/>
							</div>
						</form>
				</field>
			</record>

		<record model="ir.ui.view" id="shipment_tree">
				<field name="name">sahan_logistics.shipment.tree</field>
				<field name="model">sahan_logistics.shipment</field>
				<field name="arch" type="xml">
					<tree>
						<field name="name" />
						<field name="date" />
						<field name="port_of_loading_id" />
						<field name="port_of_delivery_id" />
						<field name="container_no" />
						<field name="seal_no" />
						<field name="partner_id" />
						<field name="chargeable_weight" />
						<field name="state" />
					</tree>
				</field>
		</record>

			<record model="ir.actions.act_window" id="shipment_action">
					<field name="name">Shipments</field>
					<field name="res_model">sahan_logistics.shipment</field>
					<field name="view_type">form</field>
					<field name="view_mode">tree,form</field>
					<field name="help" type="html">
						<p class="o_view_nocontent_smiling_face">Create Shipment
						</p>
					</field>
			</record>

			<record id="shipment_action_tree" model="ir.actions.act_window.view">
					<field name="view_mode">tree</field>
					<field name="view_id" ref="shipment_tree" />
					<field name="act_window_id" ref="shipment_action" />
			</record>

			<menuitem
				id="shipment_menu"
				name="Shipment"
				parent="shardi_logistics_dubai_root"
				sequence="2"
				action="shipment_action"

				/>

	</data>
</odoo>
