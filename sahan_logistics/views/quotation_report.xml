<odoo>
    <data>
        <report
            id="action_quotation_report"
            name="sahan_logistics.quotation_report"
            file="sahan_logistics.quotation_report"
            model="sahan_logistics.freight_booking"
            string="Quotation"
            report_type="qweb-pdf"
        />

        <template id="quotation_report">
			<t t-call="web.html_container">
				<t t-call="web.external_layout">
					<t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <h2>
                                Quotation
                            </h2>

                            <div id="informations" class="row mt32 mb32">
								<div class="col-auto mw-100 mb-2">
									<strong>Description:</strong>
									<p class="m-0" t-field="doc.name"/>
								</div>

								<div class="col-auto mw-100 mb-2" style="margin-left:500px">
									<strong>Quotation Date:</strong>
									<p class="m-0" t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
								</div>
							</div>

                            <table class="table table-sm o_main_table">
								<thead>
									<tr>
										<!-- TODO: remove in master -->
										<th class="text-left"><span>Service</span></th>
										<th class="text-right"><span>QTY/KG</span></th>
										<th class="text-right"><span>Rate</span></th>
										<th class="text-right"><span>Amount</span></th>
									</tr>
								</thead>
								<tbody>
                                    <t t-foreach="doc.cost_estimation_line_ids" t-as="line">
                                        <tr>
                                            <td class="text-left"><span t-field="line.product_id"/></td>
                                            <td class="text-right"><span t-field="line.qty"/></td>
                                            <td class="text-right"><span t-field="line.rate"/></td>
                                            <td class="text-right"><span t-field="line.price_subtotal"/></td>
                                        </tr>
                                    </t>

                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-field="doc.total"
                                                t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                            />
                                        </td>
                                    </tr>
								</tbody>
							</table>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>