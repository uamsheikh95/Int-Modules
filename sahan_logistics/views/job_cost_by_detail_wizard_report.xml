<odoo>
<data>


    <report
        id="action_job_cost_by_detail_wizard"
        name="sahan_logistics.job_cost_by_detail_wizard_report"
        model="sahan_logistics.job_cost_by_detail_wizard_report"
        string="Job Ledger"
        report_type="qweb-pdf"
        />

    <template id="job_cost_by_detail_wizard_report">
        <t t-call="web.html_container">

                <t t-call="web.external_layout">
                    <div class="page" >

						<h2>
							Job Ledger
						</h2>

						<!--Search criteria-->
						<table class="table table-bordered">
							<tbody>
								<tr class="text-center">
									<td><strong>Job</strong></td>
									<td><span t-esc="job_name"/></td>
									<td><strong>Partner</strong></td>
									<td><span t-esc="partner_name"/></td>
								</tr>

								<tr class="text-center">
									<td><strong>From</strong></td>
									<td><span t-esc="date_from"/></td>
									<td><strong>To</strong></td>
									<td><span t-esc="date_to"/></td>
								</tr>

								<tr class="text-center">
									<td><strong>Shipment</strong></td>
									<td><span t-esc="shipment_name"/></td>
									<td></td>
									<td></td>
								</tr>
							</tbody>
						</table>

							<t t-foreach="jobs" t-as="job">
								<table class="table table-sm o_main_table">
									<thead>
										<tr>
											 <th class="text-left">Job No.</th>
											 <th class="text-right">Date</th>
											 <th class="text-right">Shipment Type</th>
											 <th class="text-right">Consignee</th>
											 <th class="text-right">C Phone</th>
											 <th class="text-right">Total Qty</th>
											 <th class="text-right">Total Weight</th>
		<!--									 <th class="text-right">Total Invoiced</th>-->
		<!--									 <th class="text-right">Discount</th>-->
		<!--									  <th class="text-right">Amount Paid</th>-->
		<!--									 <th class="text-right">Job Cost</th>-->
		<!--									 <th class="text-right">Profit</th>-->
										</tr>
									</thead>

									<tbody>
										 <tr>
											 <td class="text-left"><span t-field="job.name"/></td>
											 <td class="text-right"><span t-field="job.job_date"/></td>
											 <td class="text-right"><span t-field="job.shipment_type"/></td>
											 <td class="text-right"><span t-field="job.partner_id"/></td>
											 <td class="text-right"><span t-field="job.partner_id.phone"/></td>
											 <td class="text-right"><span t-field="job.qty"/></td>
											 <td class="text-right"><span t-field="job.chargeable_weight"/></td>
		<!--										 <td class="text-right"><span t-field="job.invoice_id.amount_total"/></td>-->
		<!--										 <td class="text-right"><span t-field="job.discount_total"/></td>-->
		<!--										 <td class="text-right"><span t-field="job.amount_paid"/></td>-->
		<!--										 <td class="text-right"><span t-field="job.total_bills"/></td>-->
		<!--										 <td class="text-right"><span t-field="job.total_debit_credit"/></td>-->
										 </tr>

									</tbody>
								</table>

								<table class="table table-sm o_main_table" style="width:30%;float:right">
										<tbody>
											<tr class="is-subtotal text-left">
												<td colspan="99">
													<strong class="mr16">Total Invoiced</strong>
													<span style="float:right" t-field="job.invoice_id.amount_total"/>
												</td>
											</tr>

											<tr class="is-subtotal text-left">
												<td colspan="99">
													<strong class="mr16">Discount</strong>
													<span style="float:right" t-field="job.discount_total"/>
												</td>
											</tr>

											<tr class="is-subtotal text-left">
												<td colspan="99">
													<strong class="mr16">Amount Paid</strong>
													<span style="float:right" t-field="job.amount_paid"/>
												</td>
											</tr>

											<tr class="is-subtotal text-left">
												<td colspan="99">
													<strong class="mr16">Job Cost</strong>
													<span style="float:right" t-field="job.total_bills"/>
												</td>
											</tr>

											<tr class="is-subtotal text-left">
												<td colspan="99">
													<strong class="mr16">Total</strong>
													<span style="float:right" t-field="job.total_debit_credit"/>
												</td>
											</tr>

										</tbody>
								</table>
							</t>
                    </div>
                </t>
            </t>


    </template>

</data>
</odoo>
