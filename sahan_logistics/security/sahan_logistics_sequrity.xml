<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="sahan_logistics_category">
            <field name="name">Logistics</field>
        </record>

        <record id="group_sahan_logistics_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="sahan_logistics_category"/>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_sahan_logistics_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="sahan_logistics_category"/>
            <field name="implied_ids" eval="[(4, ref('group_sahan_logistics_user'))]"/>
        </record>


        <!-- Rule user can see the records of all his allowed companies at the same time -->
         <record id="logistics_multi_companies_rule" model="ir.rule">
			<field name="model_id" ref="model_sahan_logistics_freight_booking"/>
            <field name="domain_force">['|',('company_id','in',[c.id for c in user.company_ids]),('company_id','=',False)]</field>
         </record>



    </data>
</odoo>