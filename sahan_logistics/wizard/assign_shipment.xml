<odoo>
	<data>
		<record id="assign_shipment_form" model="ir.ui.view">
            <field name="name">sahan_logistics.assign_shipment.form</field>
            <field name="model">sahan_logistics.assign_shipment.wizard</field>
            <field name="arch" type="xml">
                <form string="Assign Shipment">
                    <group>
                        <group>
                            <field name="shipment_id" domain="[('state', '=', 'open')]" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
                        </group>
                    </group>
                    <footer>
                        <button string="Assign" name="assign_shipment" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_assign_shipment"
            multi="True"
            key2="client_action_multi" name="Assign Shipment"
            res_model="sahan_logistics.assign_shipment.wizard" src_model="sahan_logistics.freight_booking"
            view_mode="form" target="new" view_type="form"
			 />
	</data>
</odoo>

