<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="fency_report_saleorder_document">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>


            <t t-call="web.external_layout">
                <t t-set="o" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                <div class="page" style="position: relative">
                    <div class="oe_structure" />
                    <div>

                      <div style="height:35px" />


                      <div style="background-color: #3498DB; width: 40%; text-align: center; padding-top: 4px; height: 50px;position: absolute; top: 10px; left: 20px">
                        <h2>
                          <span t-if="o.state == 'draft' or o.state == 'sent'">
                              <font color="#fff">Request For Quotation</font>
                          </span>

                          <span t-if="o.state == 'cancel'">
                              <font color="#fff">Cancelled Sale Order</font>
                          </span>

                          <span t-if="o.state == 'sale' or o.state == 'done'">

                              <font color="#fff">Sale Order</font>
                          </span>

                        </h2>
                      </div>







                    <div style="padding: 10px; background: #f9f9f9; border-bottom: 2px solid #3498db; border-top: 2px solid #3498db; width: 100%; margin: auto;" class="row">
                      <div class="col-6 pull-left">
                          <h5 style="margin-top: 22px;margin-bottom: 1px">
                            <strong  t-if="o.state == 'sale' or o.state == 'done' or o.state == 'cancel'" style="color: #3498DB">Order To: </strong>
                            <strong t-if="o.state == 'draft' or o.state == 'sent'" style="color: #3498DB">Quotation To: </strong>

                          </h5>

                            <span style="color:gray !important;" t-field="o.partner_id"/>
                            <br/>
                            <strong style="color:gray !important;" t-if="o.partner_id.street or o.partner_id.street2">Addr: </strong><span style="color:gray !important;" t-field="o.partner_id.street"  t-if="o.partner_id.street"/>
                            <br t-if="o.partner_id.street" />

                            <span style="color:gray !important;" t-field="o.partner_id.street2"/>
                            <br  t-if="o.partner_id.street2" />
                            <strong style="color:gray !important;"  t-if="o.partner_id.mobile">Mobile: </strong><span style="color:gray !important;" t-field="o.partner_id.mobile"/><strong style="color:gray !important;"  t-if="o.partner_id.phone"> | Phone: </strong><span style="color:gray !important;" t-field="o.partner_id.phone" t-if="o.partner_id.phone" />
                            <br t-if="o.partner_id.phone or o.partner_id.mobile" />
                            <strong style="color:gray !important;" t-if="o.partner_id.email">Email: </strong><span style="color:gray !important;" t-field="o.partner_id.email"  t-if="o.partner_id.email" />
                            <br t-if="o.partner_id.email"  />
                      </div>

                        <div class="col-6 pull-right">
                            <table style="width: 100%; border: 2px solid #3498DB;">
                              <tr style="height: 32px">
                                  <td style="padding-left: 8px;background-color:#3498DB !important;color:#FFF !important;"><strong>Order No: </strong></td>
                                  <td class="text-right" style="padding-right: 8px;background-color:#3498DB !important;color:#FFF !important;">
                                      <strong><span t-field="o.name" style="font-weight: bold"/></strong>
                                  </td>
                              </tr>

                                <tr style="height: 32px">
                                    <td style="padding-left: 8px;"><strong>Order Date: </strong></td>
                                    <td class="text-right" style="padding-right: 8px;">
                                        <p t-field="o.date_order"/>
                                    </td>
                                </tr>
                                <tr style="height: 32px">
                                    <td style="padding-left: 8px;"><strong>Payment Term: </strong></td>
                                    <td class="text-right" style="padding-right: 8px;">
                                        <p t-field="o.payment_term_id"/>
                                    </td>
                                </tr>

                                 <!-- <tr style="height: 32px">
                                    <td style="padding-left: 8px;"><strong>Shipping : </strong></td>
                                    <td class="text-right" style="padding-right: 8px;">
                                        <p t-field="o.invoice_origin"/>
                                    </td>
                                </tr> -->

                                <tr style="height: 32px; border-bottom: 1px solid">
                                    <td style="padding-left: 8px;"><strong>Sales Person: </strong></td>
                                    <td style="padding-right: 8px;" class="text-right">
                                        <p t-field="o.user_id"/>
                                    </td>
                                </tr>

                            </table>
                        </div>
                    </div>

                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([l.discount for l in o.order_line])" />

                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;">No</th>
                                    <th style="background-color:#3498DB !important;color:#FFF !important;">Description</th>
                                    <th class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">Quantity</th>
                                    <th class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">Unit Price</th>
                                    <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line" style="background-color:#3498DB !important;color:#FFF !important;">Disc.(%)</th>
                                    <th class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">Taxes</th>
                                    <th class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">Price</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="line_no" t-value="0"/>
                                <t t-foreach="doc.order_line" t-as="l">
                                    <t t-set="line_no" t-value="line_no + 1"/>
                                    <tr t-if="l.product_uom_qty">
                                        <td>
                                          <span t-esc="line_no"/>
                                        </td>
                                        <td>
                                            <span t-field="l.name" />
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.product_uom_qty" />
                                            <span groups="product.group_uom" t-field="l.product_uom" />
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_unit" />
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-field="l.discount" />
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))" />
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.price_subtotal" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div  name="total">
                        <div class="col-4 pull-right">
                            <table class="table table-sm">
                                <tr class="border-black">
                                    <td><strong>Total Without Taxes</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                    </td>
                                </tr>
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-field="doc.amount_tax" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                    </td>
                                </tr>
                                <tr style="font-weight: bold">
                                    <td style="background-color:#3498DB !important;color:#FFF !important;"><strong>Total</strong></td>
                                    <td class="text-right" style="background-color:#3498DB !important;color:#FFF !important;">
                                        <span t-field="doc.amount_total" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br/><br/><br/><br/><br/><br/><br/><br/>
                    <div style=" background-color: #3498DB; color:#fff !important; font:15px lucida-console,sans-serif !important; ">
                        <p t-if="doc.note">
                            <strong><span>Note:</span> </strong> <span t-field="doc.note" style="font-weight: bold" />
                        </p>
                    </div>

                    <div class="oe_structure" />
                </div>
            </t>
        </template>

        <template id="custom_report_saleorder" inherit_id="sale.report_saleorder">
  <xpath expr="//t[@t-call='web.html_container']" position="replace">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-if="doc.company_id.sale_template == 'classic'">
                <t t-call="odoo_external_reports.classic_report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
            <t t-if="doc.company_id.sale_template == 'fency'">
                <t t-call="odoo_external_reports.fency_report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
            <t t-if="doc.company_id.sale_template == 'modern'">
                <t t-call="odoo_external_reports.modern_report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
            <t t-if="doc.company_id.sale_template == 'odoo_standard'">
                <t t-call="odoo_external_reports.odoo_std_report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </t>
  </xpath>
</template>


    </data>
</odoo>
