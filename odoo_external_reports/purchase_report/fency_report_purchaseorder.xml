<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="fency_report_purchaseorder_document">
<t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>


    <t t-call="web.external_layout">
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
        <div class="page" style="position: relative;">
            <div class="oe_structure"/>
            <div style="height:35px" />

            <div style="background-color: #3498DB; width: 40%; text-align: center; padding-top: 4px; height: 50px;position: absolute; top: 10px; left: 20px">
                <h2>
                    <span t-if="o.state == 'purchase' or o.state == 'done'">
                        <font color="#fff" style="white-space: nowrap;">Purchase Order</font>
                    </span>

                    <span t-if="o.state == 'draft' or o.state == 'sent'">
                        <font color="#fff" style="white-space: nowrap;">Request For Quotation</font>
                    </span>
                    <span t-if="o.state == 'cancel'">
                        <font color="#fff" style="white-space: nowrap;">Cancelled Purchase Order</font>
                    </span>

                </h2>
          </div>

            <!-- end -->

            <div style="padding: 10px; background: #f9f9f9;  border-top: 2px solid #3498db; width: 100%; margin: auto;" class="row">
              <div class="col-6 pull-left">
                  <h5 style="margin-top: 22px;margin-bottom: 1px">
                    <strong style="color: #3498DB">Order From: </strong>
                  </h5>

                    <span style="color:gray !important;" t-field="o.partner_id"/>
                    <br/>
                    <strong style="color:gray !important;" t-if="o.partner_id.street or o.partner_id.street2">Addr: </strong><span style="color:gray !important;" t-field="o.partner_id.street"  t-if="o.partner_id.street"/>
                    <br t-if="o.partner_id.street" />

                    <span style="color:gray !important;" t-field="o.partner_id.street2"/>
                    <br  t-if="o.partner_id.street2" />
                    <strong style="color:gray !important;"  t-if="o.partner_id.mobile">Mobile: </strong><span style="color:gray !important;" t-field="o.partner_id.mobile"/><strong style="color:gray !important;"  t-if="o.partner_id.phone"> | Phone: </strong><span style="color:gray !important;" t-field="o.partner_id.phone" t-if="o.partner_id.phone" />
                    <br t-if="o.partner_id.phone or o.partner_id.mobile" />
                    <strong style="color:gray !important;" t-if="o.partner_id.email">Email: </strong><span style="color:gray !important;" t-field="o.partner_id.email"  t-if="o.partner_id.email" />
                    <br t-if="o.partner_id.email"  />
              </div>


                <div class="col-6 pull-right">
                    <table style="width: 100%; border: 2px solid #3498DB;">
                      <tr style="height: 32px">
                          <td style="padding-left: 8px;background-color:#3498DB !important;color:#FFF !important;"><strong>PO No: </strong></td>
                          <td class="text-right" style="padding-right: 8px;background-color:#3498DB !important;color:#FFF !important;">
                              <strong><span t-field="o.name" style="font-weight: bold"/></strong>
                          </td>
                      </tr>

                        <tr style="height: 32px">
                            <td style="padding-left: 8px;"><strong>Order Date: </strong></td>
                            <td class="text-right" style="padding-right: 8px;">
                                <p t-field="o.date_order"/>
                            </td>
                        </tr>
                        <!-- <tr style="height: 32px">
                            <td style="padding-left: 8px;"><strong>Payment Term: </strong></td>
                            <td class="text-right" style="padding-right: 8px;">
                                <p t-field="o.invoice_payment_term_id"/>
                            </td>
                        </tr> -->

                         <tr style="height: 32px">
                            <td style="padding-left: 8px;"><strong>Confirmation Date: </strong></td>
                            <td class="text-right" style="padding-right: 8px;">
                                <p t-field="o.date_approve"/>
                            </td>
                        </tr>

                        <tr style="height: 32px; border-bottom: 1px solid">
                            <td style="padding-left: 8px;"><strong>User ID: </strong></td>
                            <td style="padding-right: 8px;" class="text-right">
                                <p t-field="o.user_id"/>
                            </td>
                        </tr>

                    </table>
                </div>
            </div>

                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th style="background-color:#3498DB !important;color:#FFF !important;"><strong>No.</strong></th>
    						<th style="background-color:#3498DB !important;color:#FFF !important;"><strong>Description</strong></th>
                            <th style="background-color:#3498DB !important;color:#FFF !important;"><strong>Taxes</strong></th>
                            <th style="background-color:#3498DB !important;color:#FFF !important;" class="text-center"><strong>Date Req.</strong></th>
                            <th style="background-color:#3498DB !important;color:#FFF !important;" class="text-right"><strong>Qty</strong></th>
                            <th style="background-color:#3498DB !important;color:#FFF !important;" class="text-right"><strong>U.Price</strong></th>
                            <th style="background-color:#3498DB !important;color:#FFF !important;" class="text-right"><strong>Amount</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="current_subtotal" t-value="0"/>
    					<t t-set="line_no" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="line">
    						<t t-set="line_no" t-value="line_no + 1"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">

    								<td>
                                        <span t-esc="line_no"/>
                                    </td>

                                    <td>
                                        <span t-field="line.name"/>
                                    </td>

                                    <td name="td_taxes">
                                        <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                    </td>
                                    <td class="text-center" nowrap="nowrap">
                                        <span t-field="line.date_planned"/>
                                    </td>
                                    <td class="text-right" nowrap="nowrap">
                                        <span t-field="line.product_qty"/>
                                        <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99" id="section">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99" id="note">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99" id="subtotal">
                                        <strong class="mr16">Subtotal</strong>
                                        <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

            <div class="col-xs-4 pull-right">
                <table class="table table-sm">
                    <tr class="border-black">
                        <td><strong>Total Without Taxes</strong></td>
                        <td class="text-right">
                            <span t-field="o.amount_untaxed"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                    <tr>
                        <td>Taxes</td>
                        <td class="text-right">
                            <span t-field="o.amount_tax"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                    <tr style=" background-color: #3498DB;font-weight: bold">
                        <td><strong>Total</strong></td>
                        <td class="text-right">
                            <span t-field="o.amount_total"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </table>
            </div>

            <br/><br/><br/><br/><br/><br/><br/><br/>
            <div style=" background-color: #3498DB; color:#fff !important; font:15px lucida-console,sans-serif !important; ">
            <p t-if="o.notes">
            <strong><span>Note:</span> </strong> <span t-field="o.notes" />
            </p>
            </div>

            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_purchaseorder" inherit_id="purchase.report_purchaseorder_document">

  <xpath expr="//t[@t-call='web.external_layout']" position="replace">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <!-- <t t-if="o.company_id.purchase_template == 'classic'">
                <t t-call="odoo_external_reports.classic_report_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t> -->
            <t t-if="o.company_id.purchase_template == 'fency'">
                <t t-call="odoo_external_reports.fency_report_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t>
            <!-- <t t-if="o.company_id.purchase_template == 'modern'">
                <t t-call="odoo_external_reports.modern_report_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t>
            <t t-if="o.company_id.purchase_template =='odoo_standard'">
                <t t-call="odoo_external_reports.odoo_standard_report_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t> -->
        </t>
    </t>
 </xpath>
</template>
</data>
</odoo>
