<odoo>
  <record id="invoice_zone" model="ir.ui.view">
        <field name="name">account.move.zone.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="type">form</field>
        <field name="arch" type="xml">
               <xpath expr="//field[@name='partner_id']" position="after">
                 <field name="zone_id" readonly="1"  />
               </xpath>
        </field>
    </record>

    <record id="payment_zone" model="ir.ui.view">
          <field name="name">account.payment.zone</field>
          <field name="model">account.payment</field>
          <field name="inherit_id" ref="account.view_account_payment_form" />
          <field name="type">form</field>
          <field name="arch" type="xml">
                 <xpath expr="//field[@name='journal_id']" position="after">
                   <field name="zone_id" readonly="1"  />
                 </xpath>
          </field>
      </record>

    <record id="invoice_zone_Add_tree" model="ir.ui.view">
          <field name="name">account.move.zone.tree</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_invoice_tree" />
          <field name="type">tree</field>
          <field name="arch" type="xml">
                 <xpath expr="//field[@name='state']" position="before">
                   <field name="zone_id"  />
                 </xpath>
          </field>
      </record>

      <record id="payment_zone_Add_tree" model="ir.ui.view">
            <field name="name">account.payment.zone.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree" />
            <field name="type">tree</field>
            <field name="arch" type="xml">
                   <xpath expr="//field[@name='state']" position="before">
                     <field name="zone_id"  />
                   </xpath>
            </field>
        </record>



