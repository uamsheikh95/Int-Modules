<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <report
     id="action_sales_by_cust_summary"
     name="mgs_sales_branch.sales_by_cust_summary_report"
     model="mgs_sales_branch.sales_by_cust_summary_report"
     string="Sales by Customer Summary"
     report_type="qweb-html"
     paperformat="paperformat_custom"
 />
 <!--  paperformat="paperformat_custom" -->


    <template id="sales_by_cust_summary_report">
        <t t-call="web.html_container">
          <t t-foreach="docs" t-as="doc">
             <t t-call="web.internal_layout" t-lang="en_US">
                <div class="page">
                    <div class="container" style="font-size:12px;font-family:Arial;margin-top:1px;">
                      <div class="text-center" style="margin-top:4px;font-size: 18px; font-weight: bold;">Sales by Customer Summary</div>

                      <div id="informations" class="row mt2 mb2">

        								<div class="col-auto mw-100 mb-2" t-if="date_from" name="invoice_date" style="width: 20%; float: left;">
        									<strong>Date from:</strong>
        									<p class="m-0" t-esc="date_from"/>
        								</div>
        								<div class="col-auto mw-100 mb-2" t-if="date_to" name="due_date" style="width: 20%; float: left;">
        									<strong>Date to:</strong>
        									<p class="m-0" t-esc="date_to"/>
        								</div>

                        <div class="col-auto mw-100 mb-2" t-if="partner_id" name="due_date" style="width: 20%; float: left;">
        									<strong>Partner:</strong>
        									<p class="m-0" t-esc="partner_name"/>
        								</div>

                        <div class="col-auto mw-100 mb-2" t-if="date_to" name="due_date" style="width: 20%; float: left;" groups="base.group_multi_company">
        									<strong>Company:</strong>
        									<p class="m-0" t-esc="company_name"/>
        								</div>

        							</div>

                      <div class="row">
                        <table style="width:100%;">
                          <thead style="border:1px solid #dadadadd;">
                            <tr style="background-color: #F2F4F4;">
                              <th colspan="2" nowrap="nowrap">Customer</th>
                              <th style="text-align:center" nowrap="nowrap">Count</th>
                              <th style="text-align:right" nowrap="nowrap">Amount</th>
                            </tr>
                          </thead>

                          <tbody>

                            <!-- <t t-set="total_price_unit" t-value="0"/> -->

                            <t t-set="total_all_qty" t-value="0"/>
                            <t t-set="total_lines" t-value="0"/>
                            <t t-set="total_all_invoiced_qty" t-value="0"/>
                            <t t-set="total_all_delivered_qty" t-value="0"/>
                            <!-- <t t-set="total_all_price_unit" t-value="0"/> -->

                            <t t-set="total_balance" t-value="0"/>

                            <t t-foreach="partner_list" t-as="partner">

                              <t t-set="total_qty" t-value="0"/>
                              <t t-set="total_lines" t-value="0"/>
                              <t t-set="total_invoiced_qty" t-value="0"/>
                              <t t-set="total_delivered_qty" t-value="0"/>
                              <t t-set="balance" t-value="0"/>


                              <t  t-foreach="lines(date_from, date_to, company_id, partner.id, company_branch_ids)" t-as="line">


                                  <t t-set="total_lines" t-value="total_lines + get_total_lines(date_from, date_to, company_id, partner.id, company_branch_ids)"/>
                                  <t t-set="balance" t-value="balance + line['price_total']"/>
                              </t>

                              <tr style="border:1px solid #dddddd;">
                                <td colspan="2"><p style="font-weight:bold;margin-bottom:0;"> <span t-esc="partner.name" />  : </p></td>

                                <td style="text-align:center;font-weight:bold">
                                  <span t-esc="total_lines" />
                                </td>


                                <td style="text-align:right;font-weight:bold">
                                  <span t-esc="'{0:,.2f}'.format(balance)" />
                                  <t t-set="total_balance" t-value="total_balance + balance"/>
                                  <t t-set="balance" t-value="0"/>
                                </td>
                              </tr>

                          </t>
                          <tr style="border:1px solid #000000;">
                                <td colspan="2"><p style="font-weight:bold;margin-bottom:0;">Total All Balances  : </p></td>

                                <td style="text-align:center;font-weight:bold;border-top: 2px solid black">
                                  <!-- <span t-esc="'{0:,.2f}'.format(total_all_qty)" /> -->
                                </td>


                                <td style="text-align:right;font-weight:bold;border-top: 2px solid black">
                                  <span t-esc="'{0:,.2f}'.format(total_balance)" />
                                </td>
                              </tr>
                          </tbody>
                        </table>
                      </div> <!--tow-->


                    </div> <!--container-->
                </div> <!--page-->
              </t> <!--web.external_layout-->
            </t>
        </t> <!--web.html_container-->
    </template>
</odoo>
